{% extends 'base.html.twig' %}

{% block title %}{% trans %}Consultation !{% endtrans %}{% endblock %}

{% block body %}
<style>
.text-responsive {
  font-size: calc(100% + 1vw + 1vh);
}
#search_penalties_identifyType> div{
    display: inline-block;
    margin-right: 15px;
}


#search_penalties_identifyType{
    {# margin-right: 3%; #}
    margin-bottom: 10px;
    float:right;
}
.form-check-label {
    margin-bottom: 0;
    padding-right: 20px;
}
fieldset.form-group {
    border: 1px groove #ddd !important;
    padding: 0 1.4em 1.4em 1.4em !important;
    margin: 0 1.5em 0 0 !important;
    -webkit-box-shadow:  0px 0px 0px 0px #000;
    box-shadow:  0px 0px 0px 0px #000;
    border: 1px solid #ced4da;
    border-radius: .25rem;
    direction:rtl
}

legend.form-group {
    font-size: 1.2em !important;
    font-weight: bold !important;
    text-align: left !important;
}
legend{
    width:auto!important;
    padding-right:5px;
    padding-left: 5px;

    
    
}
legend.col-form-label {
    font-weight:bold;
    text-align:right;
    color: #323232

}
.f-right{
    float:right
}
</style>
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('warning') %}
    <div class="alert alert-warning">
        {{ message }}
    </div>
{% endfor %}


{# <form name="search_penalties" method="post"> #}

    {{ form_start(form) }}
<div class="box_penalite">
    <div class="option_">
    <fieldset class="form-group">
        <legend class="col-form-label required">نوع الهوية</legend>
        <div id="search_penalties_identifyType">
        {{ form_widget(form.identifyType) }}
            {# <div class="form-check">        
                <input type="radio" id="search_penalties_identifyType_0" name="search_penalties[identifyType]" required="required" class="form-check-input" value="1" checked="checked">
                <label class="form-check-label required" for="search_penalties_identifyType_0">CIN</label>
            </div>
            <div class="form-check">        
                <input type="radio" id="search_penalties_identifyType_1" name="search_penalties[identifyType]" required="required" class="form-check-input" value="2">
                <label class="form-check-label required" for="search_penalties_identifyType_1">Carte de Séjour</label>
            </div> #}
        </div>
    </fieldset>
    </div>
    </div>
    <div class="clear30"></div>
    <div class="box_penalite f-right mr-4 pt-2">
        <table style="direction: rtl">
            <tbody><tr>
                <th><label>رقم البطاقة التعريف الوطنية: </label></th>
                <td>
                {{ form_row(form.identify) }}
                </td>
            </tr>
            </tbody>
        </table>

        <div class="btn_submit f-right">
            <button name="page" class="btn btn-sm btn-primary" value="1" type="submit">تسجيل</button>
        </div>
    </div>
   {{ form_rest(form) }}
    {{ form_end(form) }}




{% endblock %}
    {% block javascripts %}
    <script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script type="text/javascript">
    $(document).ready(function(){
        
        $("label[for='search_penalties_identifyType_0']").text("ب.ت.و");
        $("label[for='search_penalties_identifyType_1']").text("بطاقة الإقامة");
        $("#search_penalties_identify").prop('pattern', '^[0-9]{8}');
        $("#search_penalties_identify").prop('placeholder', ' 8 أرقام');
        $("#search_penalties_identifyType_0, #search_penalties_identifyType_1").on('change', function(){
            type = $(this).val();
            console.log(type);
            if(type == 2){
                $("#search_penalties_identify").prop('pattern', '^[0-9]{15}');
                $("#search_penalties_identify").prop('placeholder', ' 15 رقم');
            }
            if(type == 1){
                $("#search_penalties_identify").prop('pattern', '^[0-9]{8}');
                $("#search_penalties_identify").prop('placeholder', ' 8 أرقام');
            }

        })
    })
</script>
    {% endblock %}
