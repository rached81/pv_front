{% extends 'base.html.twig' %}

{% block title %}{% trans %}Consultation !{% endtrans %}{% endblock %}

{% block body %}
<style>
.text-responsive {
  font-size: calc(100% + 1vw + 1vh);
}
#search_penalties_identifyType> div{
    display: inline-block;
    margin-right: 15px;
}


#search_penalties_identifyType{
    margin-left: 3%;
    margin-bottom: 10px
}

fieldset.form-group {
    border: 1px groove #ddd !important;
    padding: 0 1.4em 1.4em 1.4em !important;
    margin: 0 0 1.5em 0 !important;
    -webkit-box-shadow:  0px 0px 0px 0px #000;
    box-shadow:  0px 0px 0px 0px #000;
    border: 1px solid #ced4da;
    border-radius: .25rem;
}

legend.form-group {
    font-size: 1.2em !important;
    font-weight: bold !important;
    text-align: left !important;
}
legend{
    width:auto!important;
    padding-right:5px;
    padding-left: 5px;
    
    
}
legend.col-form-label {
    font-weight:bold;
    color: #323232
}
</style>
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('warning') %}
    <div class="alert alert-warning">
        {{ message }}
    </div>
{% endfor %}

<div class="col-4">

    {{ form_start(form) }}
<div class="box_penalite">
    <div class="option_">
    {{ form_row(form.identifyType) }}
    </div>
    </div>
    <div class="clear30"></div>
    <div class="box_penalite">
        <table>
            <tbody><tr>
                <th><label>{% trans %}Carte d'identit√© nationale{% endtrans %} :</label></th>
                <td>
                    {{ form_row(form.identify)  }}
                </td>
            </tr>
            </tbody>
        </table>

        <div class="btn_submit">
            <button name="page" class="btn btn-sm btn-primary" value="1" type="submit">{% trans %}Valider{% endtrans %}</button>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>

{% endblock %}
    {% block javascripts %}
    <script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script type="text/javascript">
    $(document).ready(function(){
        
        $("#search_penalties_identifyType_0, #search_penalties_identifyType_1").on('change', function(){
            type = $(this).val();
            console.log(type);
            if(type == 2){
                $("#search_penalties_identify").prop('pattern', '^[0-9]{15}');
                $("#search_penalties_identify").prop('placeholder', ' {% trans %}15 chiffres{% endtrans %}');
            }
            if(type == 1){
                $("#search_penalties_identify").prop('pattern', '^[0-9]{8}');
                $("#search_penalties_identify").prop('placeholder', ' {% trans %}8 chiffres{% endtrans %}');
            }

        })
    })
</script>
    {% endblock %}
